<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/list_view_bg"
    android:gravity="center"
    android:orientation="horizontal" >

    <!-- android:background="@android:drawable/dialog_frame" -->
    <ImageView
        android:id="@+id/image"
        android:layout_width="80dip"
        android:layout_height="100dip"
        android:layout_margin="1dip"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/member_photo" />

    <LinearLayout
        android:id="@+id/infoLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="3dip"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/mailLayout"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="상   호"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/member_info_left"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mailId"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="3dip"
                android:gravity="left"
                android:text="maxk@email.com"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/member_info_right"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nameLayout"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="이   름"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/member_info_left"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name_major"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="3dip"
                android:gravity="left"
                android:text="일반 행정"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/member_info_right"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/phoneLayout"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="핸드폰"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/member_info_left"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/phoneNo"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="3dip"
                android:gravity="left"
                android:text="123-456-7890"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/member_info_right"
                android:textStyle="normal" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>